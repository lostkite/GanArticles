<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_fragment_about"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerHorizontal="true">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_fragment_about_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tb_fragment_about"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher_circle_up_case"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_fragment_about_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_below="@id/iv_fragment_about_icon"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_fragment_about_developer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Esahcorp"
        android:layout_below="@id/tv_fragment_about_app_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fragment_about_developer_name"
        android:layout_marginTop="4dp"
        android:text="@string/version_code"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
